{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "target": "ES6",
    "module": "ES6",
    "lib": ["ESNext", "WebWorker"],
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
