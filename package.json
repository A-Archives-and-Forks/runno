{
  "private": true,
  "name": "make-run",
  "description": "Monorepo for @make-run packages",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "prepare": "npx husky install",
    "bootstrap": "npx lerna bootstrap",
    "dev": "npx lerna exec npm run dev",
    "build:terminal": "cd packages/terminal && npm run build",
    "build:runtime": "cd packages/runtime && npm run build",
    "build:website": "cd packages/website && npm run build",
    "build": "npm run build:terminal && npm run build:runtime && npm run build:website",
    "build:deploy": "npm run bootstrap && npx lerna exec npm install && npm run build"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@types/shell-quote": "^1.7.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1"
  }
}
